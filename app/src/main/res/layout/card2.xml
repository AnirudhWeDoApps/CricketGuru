<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_team_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/extra_text_1"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/tv_first_green"
            app:layout_constraintStart_toStartOf="@+id/tv_first_red"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_first_red"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_rect"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/_3_5"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_team_first" />

        <TextView
            android:id="@+id/tv_first_green"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_rect"
            android:backgroundTint="@android:color/holo_green_dark"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/_3_5"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/tv_first_red"
            app:layout_constraintTop_toBottomOf="@+id/tv_team_first" />


        <TextView
            android:id="@+id/tv_team_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/extra_text_1"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/tv_second_green"
            app:layout_constraintStart_toStartOf="@+id/tv_second_red"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_second_red"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/round_rect"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/_3_5"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/tv_second_green"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/tv_first_green"
            app:layout_constraintTop_toBottomOf="@+id/tv_team_second" />

        <TextView
            android:id="@+id/tv_second_green"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_rect"
            android:backgroundTint="@android:color/holo_green_dark"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/_3_5"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/tv_draw_red"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_second_red"
            app:layout_constraintTop_toBottomOf="@+id/tv_team_second" />

        <TextView
            android:id="@+id/tv_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/draw"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/tv_draw_green"
            app:layout_constraintStart_toStartOf="@+id/tv_draw_red"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_draw_red"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_rect"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/_3_5"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/tv_draw_green"
            app:layout_constraintTop_toBottomOf="@+id/tv_draw" />

        <TextView
            android:id="@+id/tv_draw_green"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_rect"
            android:backgroundTint="@android:color/holo_green_dark"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/_3_5"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_draw" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>